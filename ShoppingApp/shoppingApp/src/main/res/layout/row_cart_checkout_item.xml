<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardTotalItems"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            card_view:cardCornerRadius="7sp"
            card_view:cardElevation="7sp">
        <!--android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingRight="5sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:text="Addidacjhe iuhg es chb uiegh iuigbv iucbie ib  igc ygcyi cibc iygw vb"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/clrBtnPink"
                    android:textSize="16sp"/>
                <!--android:textColor="@color/clrDarkGray"-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130sp"
                    android:layout_below="@+id/tvItemName"
                    android:paddingRight="5sp"
                    android:paddingLeft="5sp"
                    android:layout_marginTop="5sp">

                    <View
                        android:id="@+id/dummyView"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/clrBtnPink"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivProductImg"
                        xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_below="@+id/dummyView"
                        fresco:actualImageScaleType="fitXY"
                        fresco:actualImageUri=""
                        fresco:fadeDuration="300"
                        fresco:placeholderImage="@mipmap/ic_launcher"
                        fresco:placeholderImageScaleType="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="3sp"
                        android:layout_below="@+id/dummyView"
                        android:layout_toLeftOf="@+id/ivProductImg">

                        <TextView
                            android:id="@+id/tvItemPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3sp"
                            android:text="Rs. 1500.00"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/clrDarkGray"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvItemSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3sp"
                            android:text="Size 3XL"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/clrDarkGray"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvItemQty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3sp"
                            android:text="Qty 5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/clrDarkGray"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>