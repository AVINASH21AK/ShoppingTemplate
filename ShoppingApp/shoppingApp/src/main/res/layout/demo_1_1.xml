<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llMainTypeOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/rlHeaderOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:background="@color/clrShimmerColor">

            <TextView
                android:id="@+id/tvNewArrivalsTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/rlViewAllTagOne"
                android:maxLines="1"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="15sp"
                android:text="New Arrivals"
                android:textColor="@color/clrShimmerColor"
                android:textSize="@dimen/text_20s"/>

            <TextView
                android:id="@+id/rlViewAllTagOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/clrShimmerColor"
                android:layout_marginRight="10dp"
                android:paddingBottom="5sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="5sp"
                android:text="View All"
                android:textColor="@color/clrShimmerColor"
                android:textSize="@dimen/text_12s"/>
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewNewNewArrivals"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="7sp"
            card_view:cardElevation="9sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp"
                android:paddingTop="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivNewArrivalsProductImgOne"
                            android:layout_width="match_parent"
                            android:layout_height="130sp"
                            android:layout_centerVertical="true"
                            android:src="@color/clrShimmerColor"/>

                        <TextView
                            android:id="@+id/tvNewArrivalsProductNameOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_marginTop="3dp"
                            android:text="New Arrivals"
                            android:background="@color/clrShimmerColor"
                            android:textColor="@color/clrShimmerColor"
                            android:textSize="@dimen/text_16s"/>

                        <TextView
                            android:id="@+id/tvNewArrivalsProductPriceOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Rs. 1500/-"
                            android:layout_marginTop="3dp"
                            android:background="@color/clrShimmerColor"
                            android:textColor="@color/clrShimmerColor"
                            android:textSize="@dimen/text_12s"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="10sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivNewArrivalsProductImgTwo"
                            android:layout_width="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_height="130sp"
                            android:src="@color/clrShimmerColor"/>

                        <TextView
                            android:id="@+id/tvNewArrivalsProductNameTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="New Arrivals"
                            android:layout_marginTop="3dp"
                            android:background="@color/clrShimmerColor"
                            android:textColor="@color/clrShimmerColor"
                            android:textSize="@dimen/text_16s"/>

                        <TextView
                            android:id="@+id/tvNewArrivalsProductPriceTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Rs. 1500/-"
                            android:layout_marginTop="3dp"
                            android:background="@color/clrShimmerColor"
                            android:textColor="@color/clrShimmerColor"
                            android:textSize="@dimen/text_12s"/>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivNewArrivalsProductImgThree"
                            android:layout_width="match_parent"
                            android:layout_height="130sp"
                            android:src="@color/clrShimmerColor"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/tvNewArrivalsProductNameThree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="New Arrivals"
                            android:layout_marginTop="3dp"
                            android:background="@color/clrShimmerColor"
                            android:textColor="@color/clrShimmerColor"
                            android:textSize="@dimen/text_16s"/>

                        <TextView
                            android:id="@+id/tvNewArrivalsProductPriceThree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Rs. 1500/-"
                            android:layout_marginTop="3dp"
                            android:background="@color/clrShimmerColor"
                            android:textColor="@color/clrShimmerColor"
                            android:textSize="@dimen/text_12s"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="10sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivNewArrivalsProductImgFour"
                            android:layout_width="match_parent"
                            android:layout_height="130sp"
                            android:src="@color/clrShimmerColor"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tvNewArrivalsProductNameFour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="New Arrivals"
                            android:layout_marginTop="3dp"
                            android:background="@color/clrShimmerColor"
                            android:textColor="@color/clrShimmerColor"
                            android:textSize="@dimen/text_16s"/>

                        <TextView
                            android:id="@+id/tvNewArrivalsProductPriceFour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Rs. 1500/-"
                            android:layout_marginTop="3dp"
                            android:background="@color/clrShimmerColor"
                            android:textColor="@color/clrShimmerColor"
                            android:textSize="@dimen/text_12s"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>