        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ivProductImg"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="90sp"
                android:layout_height="90sp"
                fresco:actualImageScaleType="fitXY"
                fresco:roundingBorderColor="@color/clrBtnPink"
                fresco:roundingBorderWidth="1sp"
                fresco:roundingBorderPadding="5sp"
                fresco:actualImageUri=""
                fresco:fadeDuration="300"
                fresco:roundAsCircle="true"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:placeholderImageScaleType="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/ivProductImg">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Addidacjhe iuhg es chb uiegh iuigbv iucbie ib  igc ygcyi cibc iygw vb"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/clrBtnPink"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvItemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:text="Rs. 1500.00"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/clrDarkGray"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvItemSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:text="Size 3XL"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/clrDarkGray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvItemQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:text="Qty 5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/clrDarkGray"
                    android:textSize="14sp"/>

            </LinearLayout>



        </RelativeLayout>


    <!--</android.support.v7.widget.CardView>-->

    </RelativeLayout>

</LinearLayout>