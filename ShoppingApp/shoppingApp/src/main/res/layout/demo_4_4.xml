<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llMainTypeFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlHeaderFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:id="@+id/ivLastRelatedSearchTagCircularImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="5sp"
                android:background="@drawable/shimmer_gray_round"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvLastRelatedSearchTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivLastRelatedSearchTagCircularImage"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:maxLines="1"
                android:paddingBottom="5sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="5sp"
                android:text="Last Related Search"
                android:background="@color/clrShimmerColor"
                android:textColor="@color/clrShimmerColor"
                android:textSize="@dimen/text_20s"/>

            <TextView
                android:id="@+id/rlViewAllTagFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:paddingBottom="5sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="5sp"
                android:text="View All"
                android:textColor="@color/clrShimmerColor"
                android:textSize="@dimen/text_12s"/>
        </RelativeLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="5dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:background="@drawable/elevation_bg"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivLastRelatedSearchProductImgOne"
                    android:layout_width="match_parent"
                    android:layout_height="235sp"
                    android:layout_centerVertical="true"
                    android:src="@color/clrShimmerColor"/>

                <TextView
                    android:id="@+id/tvLastRelatedSearchProductNameOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="New Arrivals"
                    android:layout_marginTop="5sp"
                    android:background="@color/clrShimmerColor"
                    android:textColor="@color/clrShimmerColor"
                    android:textSize="@dimen/text_16s"/>

                <TextView
                    android:id="@+id/tvLastRelatedSearchProductPriceOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Rs. 1500/-"
                    android:layout_marginTop="5sp"
                    android:background="@color/clrShimmerColor"
                    android:textColor="@color/clrShimmerColor"
                    android:textSize="@dimen/text_12s"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivLastRelatedSearchProductImgTwo"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_centerVertical="true"
                        android:src="@color/clrShimmerColor"/>

                    <TextView
                        android:id="@+id/tvLastRelatedSearchProductNameTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="New Arrivals"
                        android:layout_marginTop="5sp"
                        android:background="@color/clrShimmerColor"
                        android:textColor="@color/clrShimmerColor"
                        android:textSize="@dimen/text_16s"/>

                    <TextView
                        android:id="@+id/tvLastRelatedSearchProductPriceTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Rs. 1500/-"
                        android:layout_marginTop="5sp"
                        android:background="@color/clrShimmerColor"
                        android:textColor="@color/clrShimmerColor"
                        android:textSize="@dimen/text_12s"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivLastRelatedSearchProductImgThree"
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_centerVertical="true"
                        android:src="@color/clrShimmerColor"/>

                    <TextView
                        android:id="@+id/tvLastRelatedSearchProductNameThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="New Arrivals"
                        android:layout_marginTop="5sp"
                        android:background="@color/clrShimmerColor"
                        android:textColor="@color/clrShimmerColor"
                        android:textSize="@dimen/text_16s"/>

                    <TextView
                        android:id="@+id/tvLastRelatedSearchProductPriceThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Rs. 1500/-"
                        android:layout_marginTop="5sp"
                        android:background="@color/clrShimmerColor"
                        android:textColor="@color/clrShimmerColor"
                        android:textSize="@dimen/text_12s"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>